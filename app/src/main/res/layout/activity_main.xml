<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wkwksama.myintent.MainActivity"
    android:baselineAligned="false"
    android:orientation="vertical">

    <TextView
        style="@style/TextFew"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latihan Intent"
        android:layout_gravity="center"/>

    <Button
        style="@style/button"
        android:id="@+id/btn_main_dial"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Phone Dial"/>


    <Button
        style="@style/button"
        android:backgroundTint="#d44"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/btn_main_browser"
        android:text="Open Browser" />

    <Button
        style="@style/button"
        android:backgroundTint="#55f"
        android:id="@+id/btn_main_opengallery"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Open Gallery"/>

</LinearLayout>
